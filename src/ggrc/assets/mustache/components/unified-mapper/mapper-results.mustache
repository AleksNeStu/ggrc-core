<div class="list-toolbar flex-box flex-box-single flex-row-reverse">
  <button can-click="onSearch" class="btn btn-small btn-info" {{#isLoading}}disabled="disabled"{{/isLoading}}>Search</button>
</div>
<object-selection items="items" selected-items="selected" refresh-selection="refreshItems" all-items="allItems" all-selected="allSelected">
  {{#if items.length}}
    <div class="flex-box flex-box-single flex-row-reverse">
      <div class="list-selection-switcher">
        Select:
        <button can-click="deselectAll" class="btn btn-link" {{#isLoading}}disabled="disabled"{{/isLoading}}>None</button>|
        <button can-click="selectAll" class="btn btn-link" {{#allSelected}}disabled="disabled"{{/allSelected}}>All</button>
      </div>
    </div>
    <div class="list-body {{#isLoading}}loading{{/isLoading}} well">
      <object-list items="items" is-loading="isLoading" spinner-css="grid-spinner">
        <mapper-results-item item-data="data" search-only="searchOnly"></mapper-results-item>
      </object-list>
    </div>
    <tree-pagination paging="paging" class="list-pagination"></tree-pagination>
  {{else}}
    <div class="well well-small">No Objects to select</div>
  {{/if}}
</object-selection>
