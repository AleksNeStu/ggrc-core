<div class="flex-size-1">
  <h6>Description</h6>
  <read-more text="item.description"></read-more>
</div>
<div class="flex-size-1">
  <h6>Notes</h6>
  <read-more text="item.notes"></read-more>
</div>
<div class="flex-box flex-row flex-box-multi">
  <div class="flex-size-1">
    <h6>Code</h6>
    <span>{{item.slug}}</span>
  </div>
  <div class="flex-size-1">
    <h6>Owner</h6>
    {{#if item.owners.length}}
      <ul class="inner-count-list">
        {{#each item.owners}}
          <li>
            <person-info person-id="{{id}}"></person-info>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
  <div class="flex-size-1">
    <h6>Primary Contact</h6>
    {{#if item.contact}}
      <person-info person-obj="item.contact"></person-info>
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
  <div class="flex-size-1">
    <h6>Secondary Contact</h6>
    {{#if item.secondary_contact}}
      <person-info person-obj="item.secondary_contact"></person-info>
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
</div>
