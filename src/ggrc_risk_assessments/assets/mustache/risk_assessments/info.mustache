<section class="info{{#is_info_pin}} sticky-info-panel{{/is_info_pin}}">

  {{#is_info_pin}}
    <info-pin-buttons class="details-wrap" maximized="maximized" on-change-maximized-state="@onChangeMaximizedState" on-close="@onClose"></info-pin-buttons>
  {{/is_info_pin}}

  {{> /static/mustache/base_objects/info-pane-utility.mustache}}

  <div class="tier-content">
    {{>'/static/mustache/base_objects/general_info.mustache'}}
    {{>'/static/mustache/base_objects/description.mustache'}}

    <div class="row-fluid wrap-row">
      <div class="span12">
        <h6>Notes</h6>
        <div class="rtf-block">
          {{{firstnonempty instance.notes '<span class="empty-message">None</span>'}}}
        </div>
      </div>
    </div>

    <div class="row-fluid wrap-row">
      <div class="span4">
        <h6>Supporting files</h6>
        <mapping-tree-view
          parent-instance="instance"
          mapping="documents"
          item-template="/static/mustache/risk_assessments/documents.mustache"
          >
        </mapping-tree-view>
        {{#is_allowed 'update'}}
          <ggrc-gdrive-picker-launcher instance="instance" link_text="Attach supporting file" click_event="trigger_upload">
          </ggrc-gdrive-picker-launcher>
        {{/is_allowed}}
      </div>
      <div class="span4">
        <h6>Risk Manager</h6>
        {{#using person=instance.ra_manager}}
          {{>'/static/mustache/people/popover.mustache'}}
        {{/using}}
      </div>
      <div class="span4">
        <h6>Risk Counsel</h6>
        {{#using person=instance.ra_counsel}}
          {{>'/static/mustache/people/popover.mustache'}}
        {{/using}}
      </div>
    </div>

    <div class="row-fluid wrap-row">
      <div class="span4">
        <h6>Code</h6>
        <p>
          {{{instance.slug}}}
        </p>
      </div>
      <div class="span4">
        <h6>Start Date</h6>
        {{#if instance.start_date}}
          <p>
            {{localize_date instance.start_date}}
          </p>
        {{else}}
          <span class="empty-message">None</span>
        {{/if}}
      </div>
      <div class="span4">
        <h6>End Date</h6>
        {{#if instance.end_date}}
          <p>
            {{localize_date instance.end_date}}
          </p>
        {{else}}
          <span class="empty-message">None</span>
        {{/if}}
      </div>
    </div><!-- row-fluid end -->
  </div>

  {{>'/static/mustache/custom_attributes/info.mustache'}}
</div>
